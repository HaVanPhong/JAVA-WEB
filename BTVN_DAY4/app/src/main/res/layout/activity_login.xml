<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/nen"
    android:alpha="0.8"
    android:layout_height="match_parent"
    tools:context=".Login">

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:alpha="0.8"-->
<!--        -->
<!--        android:src="@mipmap/nengai" />-->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/custom_logo"
        android:src="@mipmap/logologin" />
    <RelativeLayout
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="italic"
            android:textColor="#f9fffe"
            android:layout_margin="20dp"
            android:background="@drawable/custom_input"
            android:hint="Username"
            android:textColorHint="#f2fffc"
            android:inputType="text"
            android:textSize="30dp" />

        <EditText
            android:textColorHint="#f2fffc"
            android:inputType="textPassword"
            android:textColor="#f2fffc"
            android:textStyle="italic"
            android:id="@+id/edtPassword"
            android:layout_below="@id/edtUsername"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/custom_input"
            android:hint="Password"
            android:textSize="30dp" />
        <CheckBox
            android:id="@+id/checked"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/edtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e5fffa"
            android:textSize="20dp"
            android:buttonTint="#f9abc1"
            android:text="Save Password"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checked"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_login"
            android:text="Login" />
    </RelativeLayout>



</FrameLayout>